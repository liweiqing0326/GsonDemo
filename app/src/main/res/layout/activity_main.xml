<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Gson的基本使用" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Gson的一些常用设置" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Json串和Map的相互转换" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="JsonPrimitive类" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="JsonObject和JsonArray测试" />

    <Button
        android:id="@+id/btn6"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Gson的容错方式" />

    <Button
        android:id="@+id/btn7"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Gson容错机制" />

    <Button
        android:id="@+id/btn8"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Gson容错机制，基于字段的容错（推荐）" />
</LinearLayout>
